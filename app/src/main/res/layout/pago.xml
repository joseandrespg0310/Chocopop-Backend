<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffdfae">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/login_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fd9728"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Logos -->
        <ImageView
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:src="@drawable/chocopop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Choco "
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:src="@drawable/paleta" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Pop"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:src="@drawable/chocopop" />
    </LinearLayout>

    <!-- Contenido de la página de pago -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_header_layout"
        android:padding="16dp"
        android:background="#ffdfae">

        <!-- Título en el centro -->
        <TextView
            android:id="@+id/payment_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÉTODO DE PAGO"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

        <!-- Imagen del código QR -->
        <ImageView
            android:id="@+id/qr_code_image"
            android:layout_width="352dp"
            android:layout_height="321dp"
            android:layout_below="@id/payment_method_title"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/qrcode" /> <!-- Reemplaza con el recurso de tu imagen QR -->

        <!-- Instrucciones -->
        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qr_code_image"
            android:text="Escanee el código QR para poder hacer el respectivo pago"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp" />

        <!-- Botón para continuar -->

    </RelativeLayout>

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:id="@+id/navigation_layout"
        android:layout_width="371dp"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:background="#fd9728"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Iconos de navegación -->
        <ImageView
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:layout_margin="8dp" />


        <ImageView
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:layout_margin="8dp" />

        <ImageView
            android:layout_width="47dp"
            android:layout_height="45dp"
            android:layout_margin="8dp" />
    </LinearLayout>

</RelativeLayout>
